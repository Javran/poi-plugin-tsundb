{
  "name": "poi-plugin-tsundb",
  "version": "0.0.2",
  "description": "TsunDB data submission plugin for Poi",
  "keywords": [
    "kancolle",
    "poi",
    "poi-plugin",
    "tsundb"
  ],
  "repository": "git@github.com:kcwiki/poi-plugin-tsundb.git",
  "homepage": "https://github.com/kcwiki/poi-plugin-tsundb#readme",
  "bugs": "https://github.com/kcwiki/poi-plugin-tsundb/issues",
  "author": "gk <gkpyon@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "i18n"
  ],
  "scripts": {
    "format": "prettier --loglevel warn --write '**/*.{ts,json,yml,md}'",
    "lint": "tslint --project tsconfig.json --fix",
    "lint-check": "tslint-config-prettier-check ./tslint.json",
    "build": "tsc",
    "test": "rimraf dist && yarn format && yarn lint && yarn build && cross-env DEBUG=t tape -r ts-node/register tests/*.ts",
    "serve": "ts-node scripts/run-server.ts",
    "prepack": "yarn test",
    "upgrade": "yarn upgrade --latest && yarn upgrade-interactive"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/body-parser": "^1.17.0",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.11.3",
    "@types/node-fetch": "^2.1.2",
    "@types/restify": "^7.2.5",
    "@types/tape": "^4.2.32",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "node-fetch": "^2.2.0",
    "prettier": "^1.14.3",
    "restify": "^7.2.1",
    "rimraf": "^2.6.2",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "tslint"
  },
  "prettier": {
    "printWidth": 150,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "poiPlugin": {
    "title": "TsunDB Reporter",
    "description": "Report data to TsunDB (https://tsundb.kc3.moe/)",
    "icon": "fa/pie-chart",
    "priority": 100
  }
}
